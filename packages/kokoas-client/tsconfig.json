  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react-jsx",
    "allowJs": true,
    "skipLibCheck": true,
    "isolatedModules": false,
    "lib": ["ES2022"],
    "resolveJsonModule": true,
  },
  "files": [
    "./../../node_modules/@kintone/dts-gen/kintone.d.ts",
    // include google types
    //"./../../node_modules/@types/google.maps/index.d.ts",
  ],
  "exclude": [
    "./dist",
    "jest.config.ts",
    "./__TEST__/**/*"
  ]
}
