{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "module": "CommonJS",
    "target": "ESNext",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es5",
      "ES2022",
      "es6",
      "dom",
      "dom.iterable",
    ],
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "importHelpers": true,
    "moduleResolution": "Node",
    "strictFunctionTypes": false,
    "allowSyntheticDefaultImports": true,
  },
  "exclude": [
    "dist",
    "npm-scripts",
    "*eslint*",
    "*webpack*",
    "jest.config.ts",
    "**/batch-scripts/**/*",
    "cypress"
  ],
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
  ],
  "files": [
    "./node_modules/@kintone/dts-gen/kintone.d.ts",
    "./node_modules/@types/docusign-esign/index.d.ts",
  ],
  "rules": {
    "quotemark": [
      true,
      "single"
    ]
  },
  "paths": {
    "*": [
      "src/@t`ypes/*"
    ]
  },
  "references": [
    {
      "path": "./packages/kokoas-client"
    },
    {
      "path": "./packages/kokoas-server"
    },
    {
      "path": "./packages/api-kintone"
    },
    {
      "path": "./packages/api-openaAI"
    },
    {
      "path": "./packages/is-even"
    },
    {
      "path": "./packages/types"
    },
    {
      "path": "./packages/config"
    },
    {
      "path": "./packages/libs"
    },
    {
      "path": "./packages/utils-jest"
    },

    {
      "path": "./packages-automation/auto-kintone"
    },

    {
      "path": "./packages-automation/autopaymentalert"
    },
    {
      "path": "./packages-automation/autopaymentalert"
    },
  ]
}
